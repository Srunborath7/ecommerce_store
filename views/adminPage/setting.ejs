<div class="setting grid grid-cols-3 gap-4 p-10 w-full">
    <div class="col-span-2 p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
        <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">Edit Profile</h2>
        <div class="grid grid-cols-6 gap-4">
            <div class="col-span-4 col-start-2">

            </div>
            <div class="col-start-1 col-end-"></div>
            <div class="col-span-2 col-end-7 "></div>
            <div class="col-start-1 col-end-7"></div>
        </div>
    </div>
    <div class="p-6 bg-white dark:bg-gray-800 rounded-xl shadow-md">
        <div class="p-2 bg-white dark:bg-gray-800">
            <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">Select Theme:</h2>
            <div class="space-y-3">
                <label class="flex items-center space-x-3">
                    <input type="radio" name="theme" value="light"
                        class="form-radio text-blue-600 h-5 w-5" />
                    <span class="text-gray-700 dark:text-gray-200 text-lg">Light</span>
                </label>

                <label class="flex items-center space-x-3">
                    <input type="radio" name="theme" value="dark"
                        class="form-radio text-blue-600 h-5 w-5" />
                    <span class="text-gray-700 dark:text-gray-200 text-lg">Dark</span>
                </label>

                <label class="flex items-center space-x-3">
                    <input type="radio" name="theme" value="system"
                        class="form-radio text-blue-600 h-5 w-5" />
                    <span class="text-gray-700 dark:text-gray-200 text-lg">System</span>
                </label>
            </div>
        </div>
        <div class="p-4 bg-white dark:bg-gray-800 rounded-lg mt-6 max-w-md mx-auto">
            <h2 class="text-2xl font-semibold text-gray-800 dark:text-white mb-4">Change Language</h2>

            <select
                class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-white"
                id="selectLang"
                onchange="setLanguage(this.value, this.options[this.selectedIndex].text)"
            >
                <option value="en" data-flag="us"><img src="https://flagcdn.com/w40/us.png" class="w-5 h-4">English</option>
                <option value="km" data-flag="kh"><img src="https://flagcdn.com/w40/kh.png" class="w-5 h-4">Khmer (ភាសាខ្មែរ)</option>
                <option value="zh-CN" data-flag="cn"><img src="https://flagcdn.com/w40/cn.png" class="w-5 h-4">Chinese (中文)</option>
                <option value="ja" data-flag="jp"><img src="https://flagcdn.com/w40/jp.png" class="w-5 h-4">Japanese (日本語)</option>
                <option value="ko" data-flag="kr"><img src="https://flagcdn.com/w40/kr.png" class="w-5 h-4">Korean (한국어)</option>
                <option value="th" data-flag="th"><img src="https://flagcdn.com/w40/th.png" class="w-5 h-4">Thai (ไทย)</option>
                <option value="vi" data-flag="vn"><img src="https://flagcdn.com/w40/vn.png" class="w-5 h-4">Vietnamese (Tiếng Việt)</option>
                <option value="id" data-flag="id"><img src="https://flagcdn.com/w40/id.png" class="w-5 h-4">Indonesian (Bahasa Indonesia)</option>
                <option value="ms" data-flag="my"><img src="https://flagcdn.com/w40/my.png" class="w-5 h-4">Malay (Bahasa Melayu)</option>
                <option value="fil" data-flag="ph"><img src="https://flagcdn.com/w40/ph.png" class="w-5 h-4">Filipino (Tagalog)</option>

            </select>
        </div>
        <script>
            function setLanguage(lang, label) {
                const gtSelect = document.querySelector('.goog-te-combo');
                if (gtSelect) {
                gtSelect.value = lang;
                gtSelect.dispatchEvent(new Event('change'));
                }

                localStorage.setItem('preferredLang', lang);
                localStorage.setItem('preferredLangLabel', label);
            }

            window.addEventListener('DOMContentLoaded', () => {
                const savedLang = localStorage.getItem('preferredLang');
                if (savedLang) {
                document.getElementById('selectLang').value = savedLang;
                }
            });
        </script>
    </div>
</div>
<script src="/js/setting.js"></script>